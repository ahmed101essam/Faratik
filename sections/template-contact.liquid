<div class="max-w-6xl mx-auto mt-24 flex flex-col items-center justify-center">
  {% form 'contact' %}
    <h1 class="font-[bangers] text-6xl text-center my-8">Contact Us</h1>
    <div class="flex flex-col justify-center items-center">
      <div class="flex gap-6 items-center font-[poppins] my-4">
        <label class="font-medium w-20 text-lg text-right">Name</label>
        <input
          type="text"
          name="contact[name]"
          id="contact_name"
          class="border w-80 bg-white border-black border-dashed  focus:outline-0 py-1 px-2"
        >
      </div>
      <div class="flex gap-6 items-center font-[poppins] my-4">
        <label class="font-medium  w-20 text-lg text-right">Email</label>
        <input
          type="email"

          name="contact[email]"
          id="contact_email"
          class="border w-80 bg-white border-black border-dashed  focus:outline-0 py-1 px-2"
        >
      </div>
      <div class="flex gap-6 items-center font-[poppins] my-4">
        <label class="font-medium  text-lg w-20 text-right">Message</label>
        <textarea
          type="text"
          name="contact[body]"
          id="contact_body"
          class="border bg-white w-80 resize-none border-black border-dashed  focus:outline-0 py-1 px-2"
        ></textarea>
      </div>
      <input
        type="submit"
        value="Send Message"
        class="bg-[#cd0102] outlined-text text-2xl font-[bangers] px-2 py-1 cursor-pointer my-4 btn-cartoon w-3xs"
      >
    </div>
  {% endform %}
</div>
