<div
  class="bg-center bg-cover bg-no-repeat min-h-screen border-b-12 border-white contact-hero"
  style="
    {% if section.settings.contact_us_bg_mobile %}
      background-image: url('{{ section.settings.contact_us_bg_mobile | image_url: width: 800 }}');
    {% endif %}
  "
>
  <div class="w-full max-w-6xl mx-auto pt-24 p-2 flex flex-col items-center justify-center">
    {% form 'contact' %}
      <div class="flex flex-col justify-center items-center w-full">
        <h1 class="font-[bangers] text-6xl my-0 md:my-2 flex items-center justify-center text-center w-56 md:w-80">
          {% if section.settings.contact_us_title_image %}
            <img
              src="{{ section.settings.contact_us_title_image | image_url }}"
              alt="Contact Us Title"
              width=""
              height=""
              loading="lazy"
              class="block w-full object-cover"
            >
          {% endif %}
        </h1>

        <!-- Name -->
        <div class="flex flex-col gap-1 md:gap-6 md:flex-row items-start w-full md:items-center font-[poppins] my-1 md:my-4">
          <label for="contact_name" class="font-medium w-20 text-md md:text-lg text-left md:text-right">Name</label>
          <input
            type="text"
            name="contact[name]"
            id="contact_name"
            placeholder="Your name here"
            class="border w-full md:w-80 bg-white border-black border-dashed focus:outline-0 py-1 px-2"
            required
          >
        </div>

        <!-- Email -->
        <div class="flex flex-col gap-1 md:gap-6 md:flex-row items-start w-full md:items-center font-[poppins] my-1 md:my-4">
          <label for="contact_email" class="font-medium w-20 text-md md:text-lg text-left md:text-right">Email</label>
          <input
            type="email"
            name="contact[email]"
            id="contact_email"
            placeholder="Your email here"
            class="border w-full md:w-80 bg-white border-black border-dashed focus:outline-0 py-1 px-2"
            required
          >
        </div>

        <!-- Phone -->
        <div class="flex flex-col gap-1 md:gap-6 md:flex-row items-start w-full md:items-center font-[poppins] my-1 md:my-4">
          <label for="contact_phone" class="font-medium w-20 text-md md:text-lg text-left md:text-right">Phone</label>
          <input
            type="tel"
            name="contact[phone]"
            id="contact_phone"
            placeholder="Your phone here"
            class="border w-full md:w-80 bg-white border-black border-dashed focus:outline-0 py-1 px-2"
          >
        </div>

        <!-- Message -->
        <div class="flex flex-col gap-1 md:gap-6 md:flex-row items-start w-full md:items-center font-[poppins] my-1 md:my-4">
          <label for="contact_body" class="font-medium w-20 text-md md:text-lg text-left md:text-right">Message</label>
          <textarea
            name="contact[body]"
            id="contact_body"
            placeholder="Your message here"
            class="border w-full md:w-80 bg-white border-black border-dashed focus:outline-0 py-1 px-2"
            required
          ></textarea>
        </div>

        <!-- Submit -->
        <input
          type="submit"
          value="Send Message"
          class="bg-[#cd0102] outlined-text text-2xl font-[bangers] px-2 py-1 cursor-pointer my-4 btn-cartoon w-3xs"
        >

        {% if form.posted_successfully? %}
          <p class="text-green-600 font-[poppins] mt-4">Your message has been sent!</p>
        {% endif %}

        {% if form.errors %}
          <p class="text-red-600 font-[poppins] mt-4">Please fill out all fields correctly.</p>
        {% endif %}
      </div>
    {% endform %}
  </div>
</div>

<style>
  /* Desktop Background Override */
  @media (min-width: 768px) {
    .contact-hero {
      {% if section.settings.contact_us_bg_desktop %}
        background-image: url('{{ section.settings.contact_us_bg_desktop | image_url: width: 1920 }}') !important;
      {% endif %}
    }
  }
</style>

{% schema %}
{
  "name": "Contact Us Schema",
  "settings": [
    {
      "type": "image_picker",
      "id": "contact_us_title_image",
      "label": "Contact Us Title Image"
    },
    {
      "type": "image_picker",
      "id": "contact_us_bg_desktop",
      "label": "Contact Us Background Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "contact_us_bg_mobile",
      "label": "Contact Us Background Mobile Image"
    }
  ],
  "presets": [
    {
      "name": "Contact Section"
    }
  ]
}
{% endschema %}
